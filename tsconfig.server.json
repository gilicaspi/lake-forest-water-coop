{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./",
    "target": "es2016",
    "esModuleInterop": true,
    "noEmit": false,
    "sourceMap": true,
    "strict": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "declare_modules.d.ts", "server.ts", "./src/gqlNodeTypings.generated.ts", "src/public/*"],
  "exclude": ["node_modules", "tests"],
  "references": [{ "path": "../common" }]
}
